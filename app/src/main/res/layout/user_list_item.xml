<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="@dimen/ll_list_padding">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_list"
        android:layout_width="@dimen/civ_list_size"
        app:civ_border_color="@color/lightblack"
        app:civ_border_width="@dimen/border_width_comment"
        android:layout_height="@dimen/civ_list_size"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/ll_list_margin_start"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_user_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "UserName"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/user_name_size"/>
        <TextView
            android:id="@+id/tv_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "Name"
            android:textColor="@color/lightblack"
            android:textSize="@dimen/user_name_size"/>






    </LinearLayout>

    

</LinearLayout>